Sub Rojo()
    With Selection
        ' Establecer el color de fondo de la celda actual
        .Interior.Color = RGB(239, 51, 64)
        ' Establecer el color de la fuente a blanco
        .Font.Color = RGB(255, 255, 255)
    End With
End Sub
 
Sub Rojoclaro()
    With Selection
        ' Establecer el color de fondo de la celda actual
        .Interior.Color = RGB(255, 88, 93)
        ' Establecer el color de la fuente a blanco
        .Font.Color = RGB(255, 255, 255)
    End With
End Sub
 
 
Sub Morado()
    With Selection
        ' Establecer el color de fondo de la celda actual
        .Interior.Color = RGB(132, 50, 155)
        ' Establecer el color de la fuente a blanco
        .Font.Color = RGB(255, 255, 255)
    End With
End Sub
 
Sub MoradoClaro()
    With Selection
        ' Establecer el color de fondo de la celda actual
        .Interior.Color = RGB(139, 132, 215)
        ' Establecer el color de la fuente a blanco
        .Font.Color = RGB(255, 255, 255)
    End With
End Sub
